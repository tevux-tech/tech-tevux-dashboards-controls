<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net6.0-windows</TargetFramework>
    <Nullable>enable</Nullable>
    <UseWPF>true</UseWPF>
    <OutputType>Exe</OutputType>
    <Version>0.19.0</Version>
    <Company>Tevux Technologies, MB</Company>
    <Copyright>© 2022 Tevux Technologies, MB</Copyright>
    <Title>Basic controls for Tevux Dashboards</Title>
    <Authors>DevBot9</Authors>
    <Description>Provides most common controls, like Label.</Description>
    <NuspecFile>Tech.Tevux.Dashboards.Controls.nuspec</NuspecFile>
    <NuspecProperties>
      version=$(Version);
      id=$(AssemblyName);
      copyright=$(Copyright);
      title=$(Title);
      authors=$(Authors);
      description=$(Description)
    </NuspecProperties>
    <EnableWindowsTargeting>true</EnableWindowsTargeting>

    <!--Configuring source Link-->
    <PublishRepositoryUrl>true</PublishRepositoryUrl>
    <EmbedUntrackedSources>true</EmbedUntrackedSources>
    <DebugType>embedded</DebugType>
    <!-- End -->
  </PropertyGroup>

  <PropertyGroup Condition="'$(GITHUB_ACTIONS)' == 'true'">
    <!--This enables "deterministic builds"-->
    <ContinuousIntegrationBuild>true</ContinuousIntegrationBuild>
  </PropertyGroup>

  <ItemGroup>
    <Folder Include="Code\Label\ExposedProperties\" />
    <Folder Include="Code\Label\TemplateProperties\" />
  </ItemGroup>

  <ItemGroup>
    <Page Update="Themes\Generic.xaml">
      <XamlRuntime>$(DefaultXamlRuntime)</XamlRuntime>
      <SubType>Designer</SubType>
    </Page>
    <Page Update="Themes\Label.xaml">
      <XamlRuntime>$(DefaultXamlRuntime)</XamlRuntime>
      <SubType>Designer</SubType>
    </Page>
  </ItemGroup>

  <!--Tevux related settings-->
  <PropertyGroup>
    <EnableDynamicLoading>true</EnableDynamicLoading>
    <SatelliteResourceLanguages>en</SatelliteResourceLanguages>
    <RepositoryUrl>https://www.github.com/tevux-tech/tech-tevux-dashboards-controls</RepositoryUrl>
    <PackageProjectUrl>https://www.github.com/tevux-tech/tech-tevux-dashboards-controls</PackageProjectUrl>
  </PropertyGroup>

  <ItemGroup>
    <AssemblyAttribute Include="Tevux.Dashboards.Abstractions.AssemblyLoadContextAttribute">
      <ContextName>Tech.Tevux.Dashboards.Controls</ContextName>
      <ContextFriendlyName>Generic</ContextFriendlyName>
    </AssemblyAttribute>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.SourceLink.GitHub" Version="1.0.0" PrivateAssets="All" />
    <PackageReference Include="Tech.Tevux.Dashboards.Controls.Base" Version="0.18.0" />
    <PackageReference Include="Tevux.Dashboards.Abstractions" Version="0.38.0">
      <ExcludeAssets>runtime</ExcludeAssets>
    </PackageReference>
    <PackageReference Include="Tevux.Software.Helpers" Version="0.18.0" />
    <PackageReference Include="Tevux.Tools.RepositorySettings" Version="1.1.0">
      <PrivateAssets>all</PrivateAssets>
      <IncludeAssets>runtime; build; native; contentfiles; analyzers; buildtransitive</IncludeAssets>
    </PackageReference>
  </ItemGroup>
</Project>
